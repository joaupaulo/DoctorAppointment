@using DoctorAppointment.Identity.Model
@model DoctorAppointment.Identity.Model.User

@{
    Layout = "_Layout";
}

<style>
    /* Estilos para o formulário */
    .custom-form {
        background-color: #f5f5f5;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /* Estilos para os campos e rótulos */
    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

.center-container{
margin-top: 8%;
     margin-left: 40%;
    }

    /* Estilo para o botão de envio */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }
</style>

<div class="center-container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <form class="custom-form" method="post" action="@Url.Action("Create", "User")">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="Name" class="control-label">Digite o nome</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Email" class="control-label">Digite o email</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Password" class="control-label">Digite a senha</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="TypeUser" class="control-label">Selecione o tipo de usuário</label>
                    @Html.DropDownListFor(model => model.typeUser, Enum.GetValues(typeof(TypeUser)).Cast<TypeUser>().Select(value => new SelectListItem
                    {
                        Text = value.ToString(),
                        Value = ((int)value).ToString(),
                    }), "Selecione um tipo", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>